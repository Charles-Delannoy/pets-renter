<%= simple_form_for [@pet], html: { class: "form-class"} do |f| %>
<%= f.input :name %>
<%= f.input :description %>
<%= f.input :birthdate,  as: :string, start_year: Date.today.year - 20, end_year: Date.today.year, input_html: {class: "datepicker"} %>
<%= f.input :address %>
<%= f.input :pet_type %>
<%= f.input :race %>
<%= f.input :price, label: "Price per day", input_html: {min: 0, step: 5} %>
<%= f.input :photo, as: :file %>
<%= f.submit class: "my-btn btn-form" %>
<% end %>
